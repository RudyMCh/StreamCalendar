            <div class="card-body">
                <span class="card-title" style="height:60px;">{{ activity.name }}</span>
    
                <p class="card-text" style="height:30px;">{{ activity.twitchCode }}</p>
                <div style="width:115px; height:40px;background-color:{{ activity.color }};">texte</div>
                <form action="{{ path('activitiesSettings') }}" method="POST" class="form-group">
                    <input type="text" style="display:none" name="twitchCode" value="{{ activity.twitchCode }}">
                    <input type="color" name="color" class="form-control mt-2">
                    <input type="submit" class="btn btn-primary mt-2" value="attribuer">
                </form>
                
            </div>
        </div>`
        {% endfor %}
        {% endif %}
    </div>
</div>

</div>
{% endblock %}