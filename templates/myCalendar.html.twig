{% block javascripts %}
    <script>
        var activities = {{ activities|escape|json_encode|raw }}
        var deleteTarget = '{{ url('deleteEvent') }}'
        var targetExtract = '{{ url('extract') }}';    
        var targetInsert = '{{ url('insert') }}';    
        var targetUpdateDrop = '{{ url('updateDrop') }}';    
        var targetUpdateResize = '{{ url('updateResize') }}';    
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/core@4.1.0/main.min.js"></script>
